<header class="archive-header">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h4 class="archive-title">Portfolio: Single Item</h4>
            </div>
            <!-- /.col-sm-6 -->
            <div class="col-xs-6 hidden-xs">
                <ol class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Portfolio</a></li>
                    <li class="active">Portfolio: Single Item</li>
                </ol>
            </div>
            <!-- /.col-xs-6 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</header>
<!-- /.archive-header -->
<div id="main" class="wrapper">
    <div id="primary" class="site-content">
        <div class="container">
            <section class="portfolio-navigation section type2">
                <ul class="portfolio-navigation-list">
                    <li>
                      <%= link_to("<span>&laquo;&nbsp;Previous</span>".html_safe, portfolio_item_path(getPrev(@portfolio_item_id, @listOfPortfolioIds))) %>
                    </li>
                    <li>
                      <%= link_to("<span>Next&nbsp;&raquo;</span>".html_safe, portfolio_item_path(getNext(@portfolio_item_id, @listOfPortfolioIds)))%>
                    </li>
                </ul>
            </section>
            <!-- /.portfolio-navigation -->
            <section class="portfolio-thumb section type2">
                <div id="carousel-generic-example" class="carousel slide" data-ride="carousel" >
                  <!-- Menu -->
                    <ol class="carousel-indicators">
                      <li data-target="#carousel" data-slide-to="0" class="active"></li>
                      <li data-target="#carousel" data-slide-to="1"></li>
                      <li data-target="#carousel" data-slide-to="2"></li>
                      <li data-target="#carousel" data-slide-to="3"></li>
                    </ol>
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                      <!-- Display primary image from PortfolioItem table -->
                      <% unless @portfolio_item.primary_image_path.nil? %>
                        <div class="item active">
                          <%=image_tag("#{@portfolio_item.primary_image_path}", class:"img-responsive portfolio-img", alt:"Carousel Image") %>
                        <!-- <%#= image_tag("BigData1.jpg", class:"img-responsive portfolio-img", alt:"Carousel Image")%> -->
                        <% unless @portfolio_item.title.nil? %>
                          <div class="carousel-caption">
                            <h3><%=@portfolio_item.title%></h3>
                            <% unless @portfolio_item.subtitle.nil? %>
                            <p><%=@portfolio_item.subtitle%></p>
                            <% end %> <!-- /subtitle.nil? -->
                          </div>
                        <% end %> <!-- /title.nil? -->
                        </div>
                      <% end %> <!-- /unless -->

                      <!-- Display any secondary image from PortfolioImages table -->
                      <% @portfolio_images.each do |secondaryPortfolioImage| %>
                        <% if secondaryPortfolioImage.portfolio_item_id == @portfolio_item_id %>
                        <div class="item">
                        <%=image_tag("#{secondaryPortfolioImage.image_path}", class:"img-responsive portfolio-img", alt:"Carousel Image") %>
                        <% unless secondaryPortfolioImage.title.nil? %>
                          <div class="carousel-caption">
                            <h3><%=secondaryPortfolioImage.title%></h3>
                            <% unless secondaryPortfolioImage.subtitle.nil? %>
                            <p><%=secondaryPortfolioImage.subtitle%></p>
                            <% end %> <!-- /caption-text.nil? -->
                          </div>
                        <% end %> <!-- /caption_title.nil? -->
                        </div>
                        <% end %> <!-- /if portfolio_item_id == @portfolio_item_id -->
                      <% end %> <!-- /@portfolio_images.each iteration -->
                    </div> <!-- /carousel-inner -->
                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#carousel-generic-example" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#carousel-generic-example" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                      </a>
                    <div id="carouselButtons">
                      <button id="playButton" type="button" class="btn btn-default btn-xs">
                          <span class="glyphicon glyphicon-play"></span>
                       </button>
                      <button id="pauseButton" type="button" class="btn btn-default btn-xs">
                          <span class="glyphicon glyphicon-pause"></span>
                      </button>
                    </div>
                </div> <!-- carousel -->
            </section>
            <!-- /.portfolio-thumb -->
            <div class="row left-align-text">
                <div class="col-md-8">
                    <section class="section type2">
                        <div class="subpage-title">
                            <h5>Project Description</h5>
                        </div>
                        <%=@portfolio_item.body.html_safe %>
                    </section>
                </div>
                <div class="col-md-4">
                    <section class="section type2">
                        <div class="subpage-title">
                            <h5>Project Details</h5>
                        </div>
                        <ul class="project-details-list">
                            <li>
                                <h6>Company:</h6>
                                <div class="project-terms">
                                <%=@portfolio_item.title %>
                                </div>
                            </li>
                            <li>
                                <h6>Categories:</h6>
                                <div class="project-terms">
                                    <a href="#">Design</a>, <a href="#">Photography</a>, <a href="#">Creativity</a>, <a href="#">Web Development</a>
                                </div>
                            </li>
                            <li>
                                <h6>Date:</h6>
                                <div class="project-terms">
                                  <%=@portfolio_item.date %>
                                </div>
                            </li>
                            <li>
                                <h6>Skills:</h6>
                                <div class="project-terms">
                                    <a href="http://dhakadesk.com/retouch/archives/skills/css3">CSS3</a>, <a href="http://dhakadesk.com/retouch/archives/skills/html5">HTML5</a>, <a href="http://dhakadesk.com/retouch/archives/skills/javascript">JavaScript</a>, <a href="http://dhakadesk.com/retouch/archives/skills/jquery">jQuery</a>, <a href="http://dhakadesk.com/retouch/archives/skills/mysql">MySQL</a>, <a href="http://dhakadesk.com/retouch/archives/skills/php">PHP</a>
                                </div>
                            </li>
                            <li>
                                <h6>Website:</h6>
                                <div class="project-terms">
                                  <%= link_to "#{@portfolio_item.website_link}", "#{@portfolio_item.website_link}", data: { confirm: "Are you sure?" } %>
                                  <!-- <a href="#">WrapMarket.com</a> -->
                                </div>
                            </li>
                        </ul>
                    </section>
                </div>
            </div>

            <section class="section type3">
                <div class="subpage-title type3">
                    <h5>Related Works</h5>
                    <!-- Controls -->
                    <div class="controls">
                        <span id="portfolio-prev" class="prev black"><i class="fa fa-angle-left"></i></span>
                        <span id="portfolio-next" class="next black"><i class="fa fa-angle-right"></i></span>
                    </div>
                </div>
                <div class="hide-overflow">
                    <div class="row">
                        <div id="caroufredsel-portfolio-container">
                          <% @portfolio_items.each do |portfolioItem| %>
                            <% unless @portfolio_item_id == portfolioItem.id %>
                            <div class="col-xs-12 col-sm-6 col-md-4 portfolio-item-wrapper artwork creative">
                                <div class="portfolio-item type2">
                                    <div class="portfolio-thumb">
                                    <%= image_tag("#{portfolioItem.primary_image_path}", class:"img-responsive", alt:"Portfolio Thumb")%>
                                      <div class="image-overlay"></div>
                                      <%#= link_to "<span class='fa fa-eye'></span>".html_safe, portfolio_item_path(@portfolio_item.id), class: "portfolio-zoom", data-rel"=>"prettyPhoto" %>
                                      <%#= link_to "<i class='fa fa-eye'></i>".html_safe, image_tag("#{@portfolio_item.primary_image_path}"), class:"portfolio-zoom", 'data-rel'=>"prettyPhoto" %>
                                      <a href="portfolioItem.primary_image" data-rel="prettyPhoto" class="portfolio-zoom"><i class="fa fa-eye"></i></a>
                                      <%= link_to("<span class='fa fa-link'></span>".html_safe, portfolio_item_path(portfolioItem.id), class:"portfolio-link")%>

                                      <!-- <a href="images/Stanford.jpg" data-rel="prettyPhoto" class="portfolio-zoom"><i class="fa fa-eye"></i></a>
                                      <a href="portfolio-item-1.html" class="portfolio-link"><i class="fa fa-link"></i></a> -->
                                    </div>
                                    <div class="portfolio-details">
                                      <div class="portfolio-meta">
                                          <span class="portfolio-date"><i class="fa fa-clock-o"></i> <a href="#">&nbsp;<%=portfolioItem.date%></a></span>
                                          <span class="portfolio-likes"><i class="fa fa-heart-o"></i> <a href="#">&nbsp; 17</a></span>
                                      </div>
                                      <h5 class="portfolio-title"><a href=""><%=portfolioItem.subtitle%></a></h5>
                                    </div>
                                </div>
                            </div>
                            <% end %>
                          <% end %>
                            <!-- /.portfolio-item-wrapper -->
                        </div>
                        <!-- /.caroufredsel-portfolio-container -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /hide-overflow -->
            </section>
        </div> <!-- /container -->
    </div>
    <!-- /.site-comtent -->
</div>
