<%= form_for @message, html: {class: "form-horizontal"}, url: {action: "create"}  do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "control-label col-sm-2" %>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter your name" %>
    </div>
  </div>

 <div class="form-group">
     <%= f.label :email, class: "col-sm-2 control-label" %>
     <div class="col-sm-8">
       <%= f.text_field :email, class: "form-control", placeholder: "Enter your email address" %>
     </div>
 </div>

 <div class="form-group">
   <%= f.label :subject, class: "col-sm-2 control-label" %>
   <div class="col-sm-8">
     <%= f.text_field :subject, class: "form-control", placeholder: "Enter the subject of your message" %>
   </div>
 </div>

  <div class="form-group">
    <%= f.label :content, "Message", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_area :content, class: "form-control", placeholder: "Enter your message here" %>
    </div>
  </div>
  <br>
  <div class="form-group">
    <div class="col-sm-8 col-sm-offset-2">
      <%= f.submit "Send Message", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
