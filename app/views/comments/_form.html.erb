<%= form_for [@blog_post, @blog_post.comments.build], html: { class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.hidden_field :parent_id %>
    <%= f.label :name, class: "control-label col-sm-2 " %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter your name here" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :message, class: " control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_area :message, class: "form-control", placeholder: "Enter your message here" %>
    </div>
  </div>
  <div class="form-group actions">
    <%=f.submit %>
  </div>

<% end %>
